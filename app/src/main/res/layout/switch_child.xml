<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/child_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/icon_user"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParentName"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/child_icon"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/switch_child"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/switch_child"
        android:textColor="@color/grey"
        android:textSize="15dp"
        android:background="@drawable/switchchild_btn_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
         />

</RelativeLayout>
