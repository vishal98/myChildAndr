<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/parent_logo" />

        <TextView
            android:id="@+id/parent_teacher_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/login_parent_teacher_txt"
            android:layout_below="@+id/logo_iv"
            android:textStyle="bold"
            android:textColor="@color/grey" />

        <View
            android:id="@+id/view_parent_teacher"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/parent_teacher_txt"
            android:layout_marginTop="4dp"
            android:background="@color/green" />

        <EditText
            android:id="@+id/user_id"
            style="@style/hdpi_login_textfield_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hdpi_textfield_height"
            android:layout_below="@+id/view_parent_teacher"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:hint="@string/userid_hint"
            android:text="test_teacher"
            android:inputType="textPersonName"
            android:typeface="sans" />

        <View
            android:id="@+id/userid_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/user_id"
            android:background="@color/color_password" />

        <EditText
            android:id="@+id/password"
            style="@style/hdpi_login_textfield_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hdpi_textfield_height"
            android:layout_below="@+id/user_id"
            android:layout_marginTop="15dp"
            android:text="123"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:background="@null" />

        <View
            android:id="@+id/password_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/password"
            android:background="@color/color_password" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hdpi_login_height"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:text="@string/login_btn"
            android:textColor="@color/white" />

        <View
            android:id="@+id/login_btn_border"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/login_btn"
            android:background="@color/Darkgreen" />

        <TextView
            android:id="@+id/login_footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/login_footer_txt"
            android:gravity="center" />

        <!--  <Button
              android:id="@+id/reset_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_weight="1"
              android:text="@string/login_reset" />-->

    </RelativeLayout>

</RelativeLayout>
