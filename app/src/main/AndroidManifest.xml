            </intent-filter>
            <intent-filter>
                <action android:name="com.mychild.view.MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommonToApp.LoginActivity"
